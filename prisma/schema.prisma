
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

enum Role {
  CLIENT
  OWNER
  STAFF
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  active    Boolean @default(true)
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // relations
  businesses Business[]
  acceptedAppointments Appointment[] @relation("AcceptedByUser")
}

model Business {
  id          Int      @id @default(autoincrement())
  name        String
  userOwner   User     @relation(fields: [userOwnerId], references: [id])
  userOwnerId Int
  active      Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // relations
  appointments Appointment[]
}

model Appointment {
  id           Int      @id @default(autoincrement())
  acceptedBy   User?    @relation("AcceptedByUser", fields: [acceptedById], references: [id])
  acceptedById Int?
  business     Business @relation(fields: [businessId], references: [id])
  businessId   Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  dateFrom     DateTime
  dateTo       DateTime
  status       String
}
